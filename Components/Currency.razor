<li class="coinWrapper" id=@Id key=@Id>
              <span class="coinSubtract" @onclick="DecrementUnit">
                -
              </span>
              <span class="coinAdd" @onclick="IncrementUnit">
                +
              </span>
              <span class="count">
                @currentCount
              </span>
              <div
                class="coin"
                style="
                  background-image: url('@ImageUrl');
                  width: @GetCoinSize();
                  height: @GetCoinSize();"
                @onclick="IncrementUnit"
              ></div>
            </li>